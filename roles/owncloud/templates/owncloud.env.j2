# Variáveis de ambiente para OwnCloud e Banco de Dados
# Estas são usadas pelo docker-compose.yml para configurar os containers

OWNCLOUD_DB_TYPE=pgsql
OWNCLOUD_DB_HOST=db
OWNCLOUD_DB_NAME=owncloud
OWNCLOUD_DB_USERNAME=owncloud
OWNCLOUD_DB_PASSWORD={{ owncloud_db_password }}

OWNCLOUD_ADMIN_USERNAME=admin
OWNCLOUD_ADMIN_PASSWORD={{ owncloud_admin_password }}

OWNCLOUD_TRUSTED_DOMAINS={{ owncloud_client_dns }},{{ owncloud_client_ip }}
OWNCLOUD_ALLOW_EXTERNAL_LOCAL_STORAGE=true